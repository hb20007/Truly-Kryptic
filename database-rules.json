{
    "rules": {
        "level-secrets": {
            "$key": {
                ".read": "true"
            }
        },
        "guesses": {

        },
        "hall-of-fame": {
            ".read": true,
            "$uid": { "nickname": {},  },
        },
        "users": {
            "$uid": {
                "$level_id": {
                    "$sublevel_id": {
                        "answer": {
                            ".read": "$uid === auth.uid",
                            ".write": "$uid === auth.uid && root.child('levels/' + $level_id + '/' + $sublevel_id + '/answers/' + newData.val()).exists()"
                        },
                        "guesses": {
                            ".read": "$uid === auth.uid",
                            ".write": "$uid === auth.uid"
                        }
                    }
                }
            }
        }
    }
}