{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}",
            "skipFiles": [
                "*.js",
                "**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Protractor",
            "program": "${workspaceFolder}/node_modules/.bin/protractor",
            "args": [
                "${workspaceFolder}/protractor.conf.js"
            ]
        }
    ]
}